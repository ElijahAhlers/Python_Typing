<Label>:
	font_name: 'KivyGraphicFiles/Fonts/UbuntuMono-R'
	
<TypingHistory>
	orientation: 'vertical'
	BoxLayout:
		orientation: 'horizontal'
		size_hint_y: 0.1
		GridLayout:
			cols: 1
			size_hint_x: 0.7
			Label:
				id: name
				font_size: '40sp'
				text: 'Typing History'
		GridLayout:
			cols: 2
			size_hint_x: 0.3
			Button:
				text: 'Refresh'
				on_press: root.refresh()
			Button:
				text: 'Exit'
				on_press: root.exit()
	
	GridLayout:
		cols: 1
		size_hint_y: 0.8
		Label:
			id: asciiArt
			font_size: '20sp'
			text: 'Table Goes Here'
	GridLayout:
		size_hint_y: 0.1
		cols: 3
		#padding: [root.width*0.2,root.height*0.01,root.width*0.01,root.height*0.2]
		Button:
			text: 'Next Week'
			on_press: root.next()
		Label:
			id: goneTooFar
			text: ''
		Button:
			on_press: root.previous()
			text: 'Previous Week'