# LetterGame.kv
<SelectionButton@ToggleButton>:
    letters: 0
    on_state: self.parent.parent.parent.parent.parent.change_letters(True if self.state == 'down' else False, self.letters)

<LetterGameScreen>:

    timeAllowed: timeAllowed
    letterGrid: letterGrid
	#BeginButton: BeginButton
	winLoss: winLoss
	difficulty_slider: difficulty
	exit_button: exit_button

    BoxLayout:
        orientation: 'horizontal'

        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'

                GridLayout:
                    size_hint_y: 0.2
                    rows: 2
                    padding:[0,root.height*0.02,0,root.height*0.02]
                    Label:
                        font_size: root.width*root.height*0.00004
                        text: 'Letter'

                    Label:
                        font_size: root.width*root.height*0.00004
                        text: 'Game'
                GridLayout:
                    cols: 1
                    size_hint_y: 0.1
                    Label:
                        font_size: '20sp'
                        text: 'Choose characters to type below'


                GridLayout:
                    id: letter_selection_buttons
                    size_hint_y: 0.6
                    padding: [root.width*0.02,0,root.width*0.02,root.width*0.02]
                    cols: 2
                    SelectionButton:
                        id: hr
                        text: 'Home Row'
                        letters: 0
                    SelectionButton:
                        id: ehor
                        text: 'Add E, H, O, R'
                        letters: 1
                    SelectionButton:
                        id: ituc
                        text: 'Add I, T, U, C'
                        letters: 2
                    SelectionButton:
                        id: nwgbp
                        text: 'Add N, W, G, B, P'
                        letters: 3
                    SelectionButton:
                        id: mxyzq
                        text: 'Add M, X, Y, Z, Q'
                        letters: 4
                    SelectionButton:
                        id: perComColQuest
                        text: 'Add Period, Comma,\nColon, Question Mark'
                        letters: 5
                    SelectionButton:
                        id: quoteApostHyp
                        text: 'Add Quotations,\nApostrophe, Hyphen'
                        letters: 6
                    SelectionButton:
                        id: Cap
                        text: 'Add Capital\nLetters'
                        letters: 7
                        disabled: True
                    SelectionButton:
                        id: Num
                        text: 'Add Numbers'
                        letters: 8
                    SelectionButton:
                        id: specChar
                        text: 'Add Special Characters'
                        letters: 9

                GridLayout:
                    cols: 1
                    size_hint_y: 0.1
                    padding: [root.width*0.02,0,root.width*0.02,root.width*0.02]
                    Button:
                        text: 'Exit'
                        id: exit_button
                        on_press: root.exit()


        BoxLayout:
            orientation: 'horizontal'
            size_hint: 2,1
            BoxLayout:
                orientation: 'vertical'
                GridLayout:
                    rows: 3
                    GridLayout:
                        cols: 2
                        GridLayout:
                            cols: 2
                            Label:
                                text: 'Time:'
                                font_size: '30sp'
                            Label:
                                id: timeAllowed
                                text: '03:00'
                                font_size: '30sp'

                        GridLayout:
                            cols: 1
                            padding:[root.width*0.02,root.height*0.01,root.width*0.02,0]
                            Button:
                                id: BeginButton
                                text: 'Begin'
                                font_size: '30sp'
                                on_press: root.begin_button_call()
                                #on_release: root.resetGameBoard()
                                disabled: True

                    GridLayout:
                        rows: 1
                        Slider:
                            id: difficulty
                            orientation: 'horizontal'
                            min: 1
                            max: 300
                            step: 1
                            value: 180
                            disabled: False
                            on_value: root.change_time_selection(self.value)

                    Label:
                        text: ''

                BoxLayout:
                    size_hint: 1,2

                    LetterGrid:
                        id: letterGrid

                Label:
                    id: winLoss
                    text: ''
                    font_size: '70sp'

        Label
