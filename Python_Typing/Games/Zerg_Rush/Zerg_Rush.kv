
<ZergRushScreen>

    diff1: diff1
    diff2: diff2
    diff3: diff3
    diff4: diff4
    diff5: diff5
    score: score
    endButton: endButton
    gameScreen: gameScreen
    beginInstructions: beginInstructions
    startButton: startButton
    userInput: userInput

    BoxLayout:
        orientation: 'vertical'

        GridLayout:
            cols: 2
            size_hint_y: (0.1)

            GridLayout:
                cols: 5

                Button:
                    id: diff1
                    text: 'Easy'
                    on_release: root.chgDif('Easy')

                Button:
                    id: diff2
                    text: 'Medium'
                    on_release: root.chgDif('Medium')

                Button:
                    id: diff3
                    text: 'Hard'
                    on_release: root.chgDif('Hard')

                Button:
                    id: diff4
                    text: 'Very Hard'
                    on_release: root.chgDif('Very Hard')

                Button:
                    id: diff5
                    text: 'Good Luck'
                    on_release: root.chgDif('Good Luck')

            GridLayout:
                cols: 3

                Label:
                    size_hint: [.35,1]
                    text_size: self.size
                    text: 'Score:  '
                    font_size: list(self.size)[0]*(25/100)
                    halign: 'right'
                    valign: 'center'

                Label:
                    id: score
                    size_hint: [.35,1]
                    text_size: self.size
                    font_size: list(self.size)[0]*(25/100)
                    text: '0'
                    halign: 'left'
                    valign: 'center'

                Button:
                    id: endButton
                    size_hint: [.3,1]
                    text: 'Close'
                    on_release: root.Exit()


        FloatLayout:
            id: gameScreen
            rows: 1
            size_hint_y: (0.8)
            size: [100,100]

            Label:
                id: beginInstructions
                text: 'Click the button \n to start'
                font_size: list(self.size)[0]*(5/100)
                halign: 'center'
                valign: 'center'
                size_hint: [.6,.6]
                pos_hint: {'top':.8,'x':.2,'y':.2,'right':.8}

        GridLayout:
            rows: 1
            size_hint_y: (0.1)

            GridLayout:
                cols: 2
                size_hint_x: (.6)

                Button:
                    id: startButton
                    size_hint_x: (.3)
                    text: 'Start'
                    on_release: root.start()

                Button:
                    size_hint_x: (.7)
                    disabled: True
                    text: 'New features coming when you program them!'



            NoBackspaceEntry:
                size_hint_x: (.3)
                text: 'Type Here'
                font_size: list(self.size)[0]*(12/100)
                id: userInput
                focus: True
    #			multiline: False
                allow_copy: False
                allow_indent: False
                on_text: root.checkSpacebar(self.text)
			
