<GamesMenuManager>:
    GamesMenuScreen:
        name: 'Games Menu'
    LetterGameScreen:
        name: 'Letter Game'
    ZergRushScreen:
        name: 'Zerg Rush'


<GameGrid@GridLayout>:
    cols: 3
	padding: [root.width*0.02,root.height*0.02,root.width*0.02,root.height*0.02]
	size_hint_x: .7
	manager: None

	GameLayout:
	    manager: root.manager
	    game_name: 'Letter Game'
	    game_description: 'Type all the letters before time runs out'

	GameLayout:
	    manager: root.manager
	    game_name: 'Zerg Rush'
	    game_description: 'I guarantee death by the end.'

	Label
	Label
	Label
	Label
	Label


<GamesMenuManagerScreen>:
    name: 'Games Menu Manager'
    GamesMenuManager


<ChartRow@GridLayout>:
    name: 'hi'
    date: 'hi'
    score: 'hi'
    time: 'hi'
    cols:4
    Label:
        text: root.name
        canvas.before:
            Color:
                rgba: (1,1,1,1)
            Line:
                width: 1.1
                rectangle: self.x, self.y, self.width, self.height

    Label:
        text: root.date
        canvas.before:
            Color:
                rgba: (1,1,1,1)
            Line:
                width: 1.1
                rectangle: self.x, self.y, self.width, self.height

    Label:
        text: root.score
        canvas.before:
            Color:
                rgba: (1,1,1,1)
            Line:
                width: 1.1
                rectangle: self.x, self.y, self.width, self.height

    Label:
        text: root.time
        canvas.before:
            Color:
                rgba: (1,1,1,1)
            Line:
                width: 1.1
                rectangle: self.x, self.y, self.width, self.height


<GamesMenuScreen>:

	BoxLayout:
		orientation: 'vertical'
		
		Label:
			size_hint_y: 0.1
			font_size: '30sp'
			text: 'Typing Games'
		
		GridLayout:
			cols: 2
			size_hint_y: 0.8
			
			GameGrid:
			    manager: root.manager
			
			GridLayout:
				cols: 1
				size_hint_x: .3

				GridLayout:
				    size_hint_y: .35
				    rows: 2

				    Label:
				        size_hint_y: .2
				        text: 'Best Results'
					
                    RecycleView:
                        id: best_results
                        viewclass: 'ChartRow'
                        size_hint_y: .8
                        data: []

                        RecycleBoxLayout:
                            default_size: None, dp(23)
                            default_size_hint: 1, None
                            size_hint_y: None
                            height: self.minimum_height
                            orientation: 'vertical'

				Label:
				    size_hint_y: .05

				GridLayout:
				    size_hint_y: .7
				    rows: 2

				    Label:
				        size_hint_y: .1
				        text: 'All Results'

                    RecycleView:
                        id: all_results
                        viewclass: 'ChartRow'
                        size_hint_y: .9
                        data: []

                        RecycleBoxLayout:
                            default_size: None, dp(23)
                            default_size_hint: 1, None
                            size_hint_y: None
                            height: self.minimum_height
                            orientation: 'vertical'
			
		Button:
			size_hint_y: 0.1
			text: 'Exit'
			on_press: root.exit()
			
		
<GameLayout>:
    cols:1
    game_name: 'Game Name Here'
    game_description: 'Game Description Here'

	GridLayout:
	    size_hint_x: .9
	    rows: 2
	
        Button:
            id: button
            size_hint_y: .25
            text: root.game_name
            on_press: root.pressed(root.game_name)

        Label:
            id: description
            size_hint_y: .65
            font_size: '20sp'
            text_size: self.size
            text: root.game_description
            valign: 'top'

        Label:
            size_hint_y: .1

    Label:
        size_hint_x: .1
