<TypingScreen>:

    GridLayout:
        rows: 6

        GridLayout:
            cols: 3

            GridLayout:
                rows: 3

                Label

                Label:
                    id: firstname
                    font_size: '35sp'
                    text: '<First Name>'

                Label:
                    id: lastname
                    font_size: '35sp'
                    text: '<Last Name>'

            GridLayout:
                rows: 1
                padding: [0,root.height*0.03,0,0]
                AsyncImage:
                    source: 'GUI/Images/CalvaryBBack2.jpg'


            GridLayout:
                cols: 1

                Label

                GridLayout:
                    rows: 6

                    Label:
                        size_hint_x: .3

                    GridLayout:
                        size_hint_z: .4
                        cols: 13

                        Label:
                            size_hint_y: .4

                        Button:
                            size_hint_y: .2
                            text: 'Exit'
                            on_press: root.Exit()

                        Label:
                            size_hint_y: .4

                    Label:
                        size_hint_x: .3

        GridLayout:
            rows: 4

            Label

            Label:
                id: lessonNum
                font_size: '30sp'
                text: '<lesson details>'

            Label:
                id: filename
                font_size: '30sp'
                text: '<fileName>'

            Label

        GridLayout:
            rows: 2

            padding: [0,root.height*0.015,0,0]

            GridLayout:
                cols: 7

                GridLayout:
                    cols: 2

                    Label:
                        size_hint_y: .2

                    Button:
                        size_hint_y: .8
                        id: redo
                        text: 'Redo'
                        on_press: root.start_lesson()
                        disabled: True

                GridLayout:
                    rows: 2

                    Label:
                        font_size: '35sp'
                        text: 'Accuracy'

                    Label:
                        id: accuracy
                        bold: True
                        font_size: '35sp'
                        text: '###%'
                        color: 0,1,1,1

                GridLayout:
                    rows: 2

                    Label:
                        font_size: '35sp'
                        text: 'Raw WPM'

                    Label:
                        id: rawwpm
                        bold: True
                        font_size: '35sp'
                        text: '###'
                        color: 0,1,1,1

                GridLayout:
                    rows: 2

                    Label:
                        font_size: '35sp'
                        text: 'RealWPM'

                    Label:
                        id: realwpm
                        bold: True
                        font_size: '35sp'
                        text: '###'
                        color: 0,1,1,1

                GridLayout:
                    rows:2

                    Label:
                        font_size: '35sp'
                        text: 'Time'

                    Label:
                        id: time
                        bold: True
                        font_size: '35sp'
                        text: '00:00'
                        color: 0,1,1,1

                GridLayout:
                    rows: 2

                    Label:
                        font_size: '35sp'
                        text: 'Idle Time'

                    Label:
                        id: idletime
                        bold: True
                        font_size: '35sp'
                        text: '00:00'
                        color: 0,1,1,1


                Label

            Label

        GridLayout:
            rows: 2

            GridLayout:
                rows: 1
                Label:
                    id: givenText
                    font_size: '35sp'
                    text: 'Text To Type'

            GridLayout:
                rows: 1
                Label:
                    id: typedText
                    markup: True
                    font_size: '35sp'
                    text: 'Typed Text'

        GridLayout:
            rows: 2

            GridLayout:
                rows: 1
                padding: [root.width*0.15,0,root.width*0.15,0]
                ProgressBar:
                    id: percentprogress
                    max: 1
                    value: 0

            GridLayout:
                cols: 3
                padding: [root.width*0.1,0,root.width*0.1,0]

                Label:
                    id: percentcomplete
                    font_size: '30sp'
                    text: 'Percent complete:   0%'

                Label:
                    id: bsonoff
                    font_size: '30sp'
                    text: 'Backspace is off/on'

                Label:
                    id: forced100
                    font_size: '30sp'
                    text: 'Forced Accuracy is off/on'

        GridLayout:
            cols: 2
            padding: [root.width*0.7,root.height*0.07,0,0]

            Label

            Label:
                id: clockThingThatTheyWant
                text: '##:##:##'
                font_size: '30sp'
			
		