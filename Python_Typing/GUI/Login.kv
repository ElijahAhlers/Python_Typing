<LoginScreen>:

	password: password
	username: username
	incpass: incpass
	
	GridLayout:
		cols: 1
		size: root.width, root.height
		
		GridLayout:
			cols: 3

			Label
			Label:
				font_size: dp(root.width*root.height*0.00015)
				text:'Typing Login'

			GridLayout:
				cols: 1
				padding: [root.width*0.2,root.height*0.01,root.width*0.01,root.height*0.2]
				Button:
					text: 'Exit'
					font_size: int(root.width*root.height*0.00004)
					on_press: root.get_root_window().close()

		GridLayout:
			cols: 3

			GridLayout:
				cols: 1
				padding: [root.width*0.1,0,0,0]
				Label:
					font_size: dp(root.width*root.height*0.00007)
					text: 'Username'

			GridLayout:
				cols: 1
				padding: [0,root.height*0.1,0,root.height*0.1]
				row_force_default: True
				row_default_height: str(root.height*0.05)+'dp'			
				TextInput:
					on_double_tap: self.text = ''
					write_tab: False
					multiline: False
					text: 'Username should go here'
					id: username

			Label:
				text: 'Software version:\nYes, you are indeed\nrunning software'
				color: 0,1,0,1

		GridLayout:
			cols: 3
			padding: [0,0,0,root.height*0.2]

			GridLayout:
				cols: 1
				padding: [root.width*0.1,0,0,0]
				Label:
					id: password
					font_size: dp(root.width*root.height*0.00007)
					text: 'Password'

			GridLayout:
				cols: 1
				padding: [0,0,0,root.height*0.19999]
				GridLayout:
					cols: 1
					row_force_default: True
					row_default_height: str(root.height*0.05)+'dp'
					TextInput:
						focus: True
						password: True
						password_mask: '*'
						multiline: False
						on_text_validate: root.Authenticate()
						id: password

			GridLayout:
				cols: 2
				
				GridLayout:
					cols: 1
					padding:[0,root.height*0.003,root.width*0.07,0]
					Button:
						text: 'Login'
						on_press: root.Authenticate()

				GridLayout:
					cols:1
					padding:[0,0,root.width*0.08,0]
					Label:
						color: 1,0,0,1
						id: incpass

		GridLayout:
			cols:  1
			padding: [0,0,0,root.height*0.05]
			Image:
				source: 'GUI/Images/CalvaryBBack2.jpg'
				
			Button:
				text: 'cheaty button of doom'
				on_press: root.cheatyFunc()
